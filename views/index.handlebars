            <label><input class="uk-radio" type="radio" name="radio3"> Parts</label>
            <label><input class="uk-radio" type="radio" name="radio4"> Accessories</label>
        </div>

        <div class="uk-margin">
            <input class="uk-input" type="text" placeholder="Seller Email">
