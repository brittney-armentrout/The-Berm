<!-- Form section -->
<form>
    <fieldset class="uk-fieldset">

        <div class="uk-margin">
            <input class="uk-input" type="text" placeholder="Item Description">
        </div>

        <div class="uk-margin">
            <input class="uk-input" type="text" placeholder="Price">
        </div>

        <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid">
